<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutNewActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kabir.imageeditor.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_weight="1">

            <include
                layout="@layout/navigation_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </include>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:orientation="horizontal"
               android:layout_margin="10dp">


               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_margin="5dp"
                   android:id="@+id/completeCards"
                   android:background="@drawable/card1">

                    <TextView
                        android:id="@+id/complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete"
                        android:textColor="#E1E2E7"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-condensed"
                        android:alpha="0.9"/>

                   <TextView
                       android:id="@+id/eidcards"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Eid Cards"
                       android:textColor="#E1E2E7"
                       android:layout_marginLeft="15dp"
                       android:layout_marginTop="0dp"
                       android:textStyle="bold"
                       android:textSize="20sp"
                       android:fontFamily="sans-serif-condensed"
                       android:layout_below="@+id/complete"
                       android:alpha="0.9"/>


                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:id="@+id/linearnocards"
                       android:layout_below="@+id/eidcards">
                       <TextView
                           android:id="@+id/noofcards"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Cards: 10"
                           android:textColor="#E1E2E7"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="5dp"
                           android:textStyle="bold"
                           android:textSize="12sp"
                           android:layout_below="@+id/complete"
                           android:alpha="0.9"/>


                       <TextView
                           android:id="@+id/noofcards2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="7/20/18"
                           android:textColor="#E1E2E7"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="5dp"
                           android:textStyle="bold"
                           android:textSize="12sp"
                           android:layout_below="@+id/complete"
                           android:alpha="0.9"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:id="@+id/linearbelow"
                       android:layout_alignParentBottom="true">

                       <TextView
                           android:id="@+id/patrialt"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Potrait"
                           android:textColor="#FFFFFF"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="5dp"
                           android:textStyle="bold"
                           android:textSize="18sp"
                           android:layout_below="@+id/complete"
                           android:alpha="0.9"
                           android:layout_marginBottom="10dp"/>


                       <ImageView
                           android:id="@+id/iconnn"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="5dp"
                           android:alpha="0.9"
                           android:gravity="right"
                           android:src="@drawable/ic_clear_all_black_24dp"
                           android:layout_marginBottom="10dp" />

                   </LinearLayout>


               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_margin="5dp"
                   android:id="@+id/cardsBackgrounds"
                   android:background="@drawable/card2">

                   <TextView
                       android:id="@+id/complete1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Complete"
                       android:textColor="#E1E2E7"
                       android:layout_marginLeft="15dp"
                       android:layout_marginTop="20dp"
                       android:textStyle="bold"
                       android:textSize="22sp"
                       android:fontFamily="sans-serif-condensed"
                       android:alpha="0.9"/>

                   <TextView
                       android:id="@+id/eidcards1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Background Designs"
                       android:textColor="#E1E2E7"
                       android:layout_marginLeft="15dp"
                       android:layout_marginTop="0dp"
                       android:textStyle="bold"
                       android:textSize="20sp"
                       android:fontFamily="sans-serif-condensed"
                       android:layout_below="@+id/complete1"
                       android:alpha="0.9"/>


                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:id="@+id/linearnocards1"
                       android:layout_below="@+id/eidcards1">

                       <TextView
                           android:id="@+id/noofcards1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Cards: 10"
                           android:textColor="#E1E2E7"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="5dp"
                           android:textStyle="bold"
                           android:textSize="12sp"
                           android:layout_below="@+id/complete"
                           android:alpha="0.9"/>


                       <TextView
                           android:id="@+id/noofcards21"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="7/20/18"
                           android:textColor="#E1E2E7"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="5dp"
                           android:textStyle="bold"
                           android:textSize="12sp"
                           android:layout_below="@+id/complete"
                           android:alpha="0.9"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:id="@+id/linearbelow1"
                       android:layout_alignParentBottom="true">

                       <TextView
                           android:id="@+id/patrialt1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Potrait"
                           android:textColor="#FFFFFF"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="5dp"
                           android:textStyle="bold"
                           android:textSize="18sp"
                           android:layout_below="@+id/complete"
                           android:alpha="0.9"
                           android:layout_marginBottom="10dp"/>


                       <ImageView
                           android:id="@+id/iconnn1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="5dp"
                           android:alpha="0.9"
                           android:gravity="right"
                           android:src="@drawable/ic_clear_all_black_24dp"
                           android:layout_marginBottom="10dp" />

                   </LinearLayout>


               </RelativeLayout>


           </LinearLayout>



        </LinearLayout>


    </LinearLayout>



    <android.support.design.widget.NavigationView
        android:id="@+id/drawerNewActivity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_head"
        app:menu="@menu/navigation_menu"></android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
